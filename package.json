{
  "name": "proplex-backend",
  "version": "1.0.0",
  "description": "Proplex Backend API",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "scripts": {
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "cross-env NODE_ENV=test jest --passWithNoTests",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "migrate": "ts-node ./node_modules/typeorm/cli migration:run",
    "migrate:generate": "ts-node ./node_modules/typeorm/cli migration:generate",
    "migrate:revert": "ts-node ./node_modules/typeorm/cli migration:revert",
    "typeorm": "ts-node ./node_modules/typeorm/cli",
    "docker:build": "docker build -t proplex-backend .",
    "docker:run": "docker run -p 5000:5000 proplex-backend",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:stop": "docker-compose down",
    "prepare": "husky install",
    "prestart": "npm run build",
    "predev": "npm run build",
    "prebuild": "npm run clean",
    "preversion": "npm test",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "node",
    "typescript",
    "express",
    "mongodb",
    "rest",
    "api"
  ],
  "author": "Proplex Team",
  "license": "MIT",
  "dependencies": {
    "@sentry/integrations": "^7.120.4",
    "@sentry/node": "^7.120.4",
    "@sentry/tracing": "^7.91.0",
    "@types/jsonwebtoken": "^9.0.10",
    "axios": "^1.12.2",
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.18.2",
    "mongoose-paginate-v2": "^1.9.1",
    "morgan": "^1.10.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.20",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.11",
    "@types/mongoose-paginate-v2": "^1.6.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.5",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.2",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,ts,json,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/**/index.ts",
      "!src/**/server.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
